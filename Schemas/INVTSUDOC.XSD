<!--
     Schema for Inventory Stock Take Confirmation Post Business Object
-->
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xsd:element name="AbortExceptionLines" type="xsd:string">
    <xsd:annotation>
      <xsd:documentation>You can only select "Abort confirmation if exception lines exist" option if a non-zero value is defined at the maximum permitted stock take variance field (Setup/Distribution/Inventory/Options). This enables you to abort the confirmation process if a variance between the captured quantity and the saved quantity exceeds a specified value or percentage.</xsd:documentation>
    </xsd:annotation>
  </xsd:element>
  <xsd:element name="Key">
    <xsd:annotation>
      <xsd:documentation>The key consists of only one element, the warehouse. The key is mandatory.</xsd:documentation>
      <xsd:documentation/>
    </xsd:annotation>
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref="Warehouse"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="Option">
    <xsd:annotation>
      <xsd:documentation>List of options</xsd:documentation>
    </xsd:annotation>
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref="AbortExceptionLines"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="PostStockTakeConfirmation">
    <xsd:annotation>
      <xsd:documentation>This is the root element.</xsd:documentation>
    </xsd:annotation>
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref="Key"/>
        <xsd:element ref="Option"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="Warehouse" type="xsd:string">
    <xsd:annotation>
      <xsd:documentation>This is the warehouse in which the stock take is taking place.Although you can count stock in more than one warehouse at a time, the system treats each warehouse as a separate stock count (i.e. you need to confirm the stock count in each warehouse separately). Warehouse is mandatory.</xsd:documentation>
    </xsd:annotation>
  </xsd:element>
</xsd:schema>
