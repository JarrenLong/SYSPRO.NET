<!--
     Schema for XmlIn to Logon method
-->
<xsd:schema elementFormDefault="qualified" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<xsd:element name="Siteid" type="xsd:string">
		<xsd:annotation>
			<xsd:documentation>This can be used to specify a SiteId.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:element name="Logon">
		<xsd:complexType mixed="true">
			<xsd:sequence>
				<xsd:element ref="Siteid" minOccurs="0"/>
				<xsd:element name="DefaultRole" type="xsd:string" minOccurs="0">
					<xsd:annotation>
						<xsd:documentation>This is a numeric parameter that can be from 1 thru 999. The role must 'exist' against the operator else the supplied value will be ignored.</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
        <xsd:element name="Lang" type="xsd:string" minOccurs="0">
          <xsd:annotation>
            <xsd:documentation>This is a two character alphanumeric string representing the language to use. For example 'DE' means messages will be returned in German.</xsd:documentation>
          </xsd:annotation>
        </xsd:element>
        <xsd:element name="SourceApp" type="xsd:string" minOccurs="0">
          <xsd:annotation>
            <xsd:documentation>This is an alphanumeric string up to 30 characters representing the name of your application. This name can be used in eSignature conditions and can be logged.</xsd:documentation>
          </xsd:annotation>
        </xsd:element>
        <xsd:element name="BuildToPost" minOccurs="0">
					<xsd:annotation>
						<xsd:documentation>This can be used when you require the output of the Build method to be input of the Post method</xsd:documentation>
					</xsd:annotation>
					<xsd:simpleType>
						<xsd:restriction base="xsd:string">
							<xsd:enumeration value="N"/>
							<xsd:enumeration value="Y"/>
						</xsd:restriction>
					</xsd:simpleType>
				</xsd:element>
				<xsd:element name="FailWhenAlreadyLoggedIn" minOccurs="0">
					<xsd:annotation>
						<xsd:documentation>Allows you to deny a login if the specified user is already logged in.</xsd:documentation>
					</xsd:annotation>
					<xsd:simpleType>
						<xsd:restriction base="xsd:string">
							<xsd:enumeration value="N"/>
							<xsd:enumeration value="Y"/>
						</xsd:restriction>
					</xsd:simpleType>
				</xsd:element>
				<xsd:element name="SystemInformationReqd" minOccurs="0">
					<xsd:annotation>
						<xsd:documentation>Allows you to request additional system information when calling a business object</xsd:documentation>
					</xsd:annotation>
					<xsd:simpleType>
						<xsd:restriction base="xsd:string">
							<xsd:enumeration value="N"/>
							<xsd:enumeration value="Y"/>
						</xsd:restriction>
					</xsd:simpleType>
				</xsd:element>
        <xsd:element name="ClientDate" type="xsd:string" minOccurs="0">
          <xsd:annotation>
            <xsd:documentation>This is a date in CCYY-MM-DD format that will be used as the client date for transaction posting purposes. This date will only be used when the operator has the option 'Use client system date' checked.</xsd:documentation>
          </xsd:annotation>
        </xsd:element>
      </xsd:sequence>
		</xsd:complexType>
	</xsd:element>
</xsd:schema>
